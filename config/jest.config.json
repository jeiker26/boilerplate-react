{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/tests/**/*.{js,jsx}",
    "<rootDir>/src/**/*.{js,jsx}"
  ],
  "coverageDirectory": ".coverage",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "notify": true,
  "roots": ["<rootDir>/src"],
  "setupFilesAfterEnv": ["./rtl.setup.js"],
  "transform": {
    "^.+\\.(js|jsx)?$": "babel-jest"
  },
  "verbose": true,
  "transformIgnorePatterns": ["<rootDir>/node_modules/"]
}
