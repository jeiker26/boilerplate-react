{
  "parser": "babel-eslint",
  "extends": ["plugin:react/recommended", "prettier"],
  "env": {
    "es6": true,
    "jest": true
  },
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": 0,
    "react/jsx-boolean-value": 0,
    "prettier/prettier": [
      "error",
      {
        "printWidth": 99,
        "parser": "flow"
      }
    ],
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ],
    "react/no-unused-prop-types": "error",
    "react/sort-prop-types": "error",
    "react/prop-types": 0,
    "react/no-deprecated": "error",
    "react/no-access-state-in-setstate": "error",
    "react/no-did-mount-set-state": [2],
    "react/no-typos":[2],
    "react/sort-comp" : [2, {
      "order": [
        "static-methods",
        "lifecycle",
        "everything-else",
        "render"
      ],
      "groups": {
        "lifecycle": [
          "displayName",
          "propTypes",
          "contextTypes",
          "childContextTypes",
          "mixins",
          "statics",
          "defaultProps",
          "constructor",
          "getDefaultProps",
          "state",
          "getInitialState",
          "getChildContext",
          "getDerivedStateFromProps",
          "componentWillMount",
          "UNSAFE_componentWillMount",
          "componentDidMount",
          "componentWillReceiveProps",
          "UNSAFE_componentWillReceiveProps",
          "shouldComponentUpdate",
          "componentWillUpdate",
          "UNSAFE_componentWillUpdate",
          "getSnapshotBeforeUpdate",
          "componentDidUpdate",
          "componentDidCatch",
          "componentWillUnmount"
        ]
      }
    }]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "^16.6.3"
    }
  }
}